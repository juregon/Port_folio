  <!--클라이언트 디비 읽어서 대입-->
  <h1>클라이언트 정보 데이터베이스</h1>

  <br>
  <br>

  <table  style="text-align: center;" border="1">
    <tr>
      <td><strong>번호</strong></td>
      <td><strong>ID</strong></td>
      <td><strong>PASSWD</strong></td>
      <td><strong>이름</strong></td>
      <td><strong>생년월일</strong></td>
      <td><strong>Phone</strong></td>
      <td><strong>Email</strong></td>
      <td><strong>영화 본 횟수</strong></td>
      <td><strong>마일리지</strong></td>
      <td><strong>등급</strong></td>
      <td></td>
    </tr>
<%
    for(var i=0; i<rows.length; i++)
    {
      var oneItem = rows[i];
%>
    <tr>
      <td><%=i+1%></td>
      <td><a name="title" value="<%=oneItem.id%>" href="/clientinfo_read/<%=oneItem.id%>">&nbsp&nbsp<%=oneItem.id%>&nbsp&nbsp</a></td>
      <td>&nbsp&nbsp<%=oneItem.passwd%>&nbsp&nbsp</td>
      <td>&nbsp&nbsp<%=oneItem.name%>&nbsp&nbsp</td>
      <td>&nbsp&nbsp<%=oneItem.birth%>&nbsp&nbsp</td>
      <td>&nbsp&nbsp<%=oneItem.phone%>&nbsp&nbsp</td>
      <td>&nbsp&nbsp<%=oneItem.email%>&nbsp&nbsp</td>
      <td>&nbsp&nbsp<%=oneItem.hit%>&nbsp&nbsp</td>
      <td>&nbsp&nbsp<%=oneItem.mileage%>&nbsp&nbsp</td>
      <% if (oneItem.hit >= 50) {%>
          <td>&nbsp&nbspVIP&nbsp&nbsp</td>
          <% } %>
          <% if (oneItem.hit >= 30) {%>
          <td>&nbsp&nbsp골드&nbsp&nbsp</td>
          <% } %>
          <% if (oneItem.hit >= 10) {%>
          <td>&nbsp&nbsp실버&nbsp&nbsp</td>
          <% } %>
          <% if (oneItem.hit < 10) {%>
          <td>&nbsp&nbsp일반&nbsp&nbsp</td>
      <% } %>
      <form action="/clientinfo" accept-charset="UTF-8" role="form" method="post" action="">
      <input type="hidden" name="user_id" value="<%=oneItem.id%>"/>
      <td><button type="submit">&nbsp&nbsp회원 삭제&nbsp&nbsp</button></td>
      </form>
    </tr>
<%
    }
%>
  </table>
</body>
</html>
