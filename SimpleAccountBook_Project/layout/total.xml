<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeee">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:text="종       합"/>
    <TextView
        android:id="@+id/income"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="수입"
    android:textSize="25dp"
    android:textColor="#0000ff"
    android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월급"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="용돈"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상여"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주식"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이자"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기타"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/outcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지출"
        android:textSize="25dp"
        android:textColor="#ff0000"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식비"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교통"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교육"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건강"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주거"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/id_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기타"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/totalbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="20dp" />
</LinearLayout>